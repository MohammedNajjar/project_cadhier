<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountFragment"
    android:background="#F9F9F9"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/total_debt"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="#071523"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColorHint="#FF0000"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_et_edit_product"
            android:hint="980" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/paid_debt"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="#071523"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#C1600C"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColorHint="#C1600C"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_et_edit_product"
            android:hint="350" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/current_debt"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"
            android:textColor="#071523"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#53A24A"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColorHint="#53A24A"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_et_edit_product"
            android:hint="630" />
    </LinearLayout>


    <Button
        android:id="@+id/save"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:background="@drawable/background_btn_create_account"/>


</LinearLayout>