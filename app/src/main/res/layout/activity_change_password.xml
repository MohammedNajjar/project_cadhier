<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ChangePasswordActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_23ssp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"/>



        <EditText
            android:id="@+id/CurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_et_changepassword"
            android:elevation="@dimen/_10sdp"
            android:textColorHint="#979797"
            android:textColor="#979797"
            android:hint="@string/current_password"
            android:inputType="textPassword"
            android:padding="@dimen/_15sdp"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_password"/>


    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_et_changepassword"
        android:elevation="@dimen/_10sdp"
        android:hint="@string/new_password"
        android:textColorHint="#979797"
        android:textColor="#979797"
        android:inputType="textPassword"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CurrentPassword"/>


    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_et_changepassword"
        android:elevation="@dimen/_10sdp"
        android:hint="@string/confirm_password"
        android:textColorHint="#979797"
        android:textColor="#979797"
        android:inputType="textPassword"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NewPassword"/>

    
    <Button
        android:id="@+id/update"
        android:layout_width="@dimen/_227sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/background_btn_create_account"
        app:layout_constraintStart_toStartOf="@id/ConfirmPassword"
        app:layout_constraintEnd_toEndOf="@id/ConfirmPassword"
        app:layout_constraintTop_toBottomOf="@id/ConfirmPassword"
        android:layout_marginTop="@dimen/_40sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>