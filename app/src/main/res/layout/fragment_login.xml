<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment"
    android:background="#F9F9F9">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/tv_name_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"/>


    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:inputType="text"
        android:hint="example@gmail.com"
        android:textColorHint="#707070"
        android:textColor="#707070"
        android:background="@drawable/background_et_create_account"
        app:layout_constraintStart_toStartOf="@id/tv_name_shop"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_shop"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"/>


    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:hint="••••••••"
        android:textColor="#707070"
        android:textColorHint="#707070"
        android:background="@drawable/background_et_create_account"
        app:layout_constraintStart_toStartOf="@id/tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_password"/>


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:text="@string/forgot_password"
        android:textColor="#2C3E50"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintEnd_toEndOf="@id/et_password"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/_218sdp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_password"
        app:layout_constraintEnd_toEndOf="@id/et_password"
        app:layout_constraintTop_toBottomOf="@id/tv_forget_password"
        android:background="@drawable/background_btn_create_account"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="@dimen/_15sdp"/>

<LinearLayout
    android:id="@+id/linear_1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    app:layout_constraintTop_toBottomOf="@id/btn_login"
    app:layout_constraintStart_toStartOf="@id/et_password"
    app:layout_constraintEnd_toEndOf="@id/et_password">


    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="#1A1824" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#2C3E50"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:text="@string/or"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:background="#1A1824"/>
</LinearLayout>

