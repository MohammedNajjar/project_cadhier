<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:background="#F9F9F9"
    app:mode="normal"
    app:dragEdge="right"
    android:id="@+id/swipe"
    android:elevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:elevation="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:backgroundTint="#FB0000"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            app:elevation="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:backgroundTint="#2C3E50"/>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:background="#F9F9F9"
        android:elevation="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_name_debt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="-"/>

        <TextView
            android:id="@+id/et_total_debt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/et_rated_debt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:text="-"/>



        <ImageView
            android:id="@+id/IconDebt"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_true_green"
            android:layout_gravity="center" />
    </LinearLayout>



</com.chauthai.swipereveallayout.SwipeRevealLayout>